//output:header.html
-
  var namearray = [
    'ARBEITEN', 
    'CV', 
    'KONTAKT',
    'KLASSE GRCIC'
  ]
-
  var linkarray = [
    'https://giacomofrey.de', 
    'https://giacomofrey.de/cv', 
    'https://giacomofrey.de/kontakt',
    'https://giacomofrey.de/klassegrcic'
  ]

.indicator
.desktop-only.h-center.flex.top-m
 .left.block
     .hover 
       a.font-title(href="https://giacomofrey.de") Giacomo Frey
     .menu
       - for(var x = 0; x< namearray.length; x++)
         .hover
           a.font-menu(class = namearray[x] href=linkarray[x]) #{namearray[x]}

.mobile-only.left.flex.top-4m
 .block
   nav.mobilemenu(role="navigation")
     #menuToggle
      input(type="checkbox")
      span
      span
      span
      ul#menu
        - for (var x = 0; x < namearray.length; x++)
          li 
          a(class = namearray[x] href=linkarray[x], data-item=namearray[x]) #{namearray[x]}
 .block.mobile-title
   a.mobile-font(href="") Giacomo Frey
     
